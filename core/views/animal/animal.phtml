        <div class="modal-footer">
            <a class="btn modal-action modal-close waves-effect waves-green" ng-show="!chekboxInsert" ng-click="addAnimal()">Salvar Animal</a>
            <a class="btn modal-action modal-close waves-effect waves-green" ng-show="chekboxInsert" ng-click="insertMultiple()">Inserir Vários</a>
        </div>
    </div>

    <!-- MODAL VENDER ANIMAL -->
    <div id="sell-modal" class="modal">
        <div class="modal-content">
            <h1 class="title-modal centered">Inserir Pedido</h1>
            <a href="#" ng-click="closeModal()" style="color: black" class="icon-close-modal right"><i class="mdi mdi-close"></i></a>
            <div class="row">
                <div class="col s12">
                    <form name="formPedido" method="POST" action="#">
                        <div class="col s6">
                            <label class="active" for="codigo">Nº do Documento</label>
                            <input class="validate" id="apelido" type="text" name="codigo" ng-model="model.numeroDocumento" required/>
                        </div>
                        <div class="col s6">
                            <label class="active" for="dataCriacao">Data de Criação</label>
                            <input class="validate" type="date" name="dataCriacao" ng-model="model.dataCriacao" required/>
                        </div>
                        <div class="col s6">
                            <label class="active" for="valorTotal">Valor Total</label>
                            <input class="validate" type="number" name="valorTotal" ng-model="model.valorTotal" required/>
                        </div>
                        <div class="col s6">
                            <label class="active" for="situacao">Clientes</label>
                            <select class="browser-default" ng-model="model.idCliente" ng-options="cliente.id as cliente.nome for cliente in clientes" ng-init="resetSelect()"></select>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <a class="btn modal-action modal-close waves-effect waves-green" ng-click="addPedido()"><i class="mdi mdi-check"></i>Salvar</a>
        </div>

    </div>

    <div id="details-modal" class="modal" style="min-height: 70%;">
        <div class="modal-content">
            <h1 class="title-modal centered">Detalhes Vacinas</h1>
            <a href="#" ng-click="closeModal()" style="color: black" class="right"><i class="mdi mdi-close"></i></a>
            <div class="row">
                <div class="col s12">
                    <table class="striped centered responsive-table">
                        <thead>
                            <tr>
                                <th>Código</th>
                                <th>Vacina</th>
                                <th>Descrição</th>
                                <th>Data de Aplicação</th>
<!--                                <th>Ações</th>-->
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="detail in details| orderBy: '-id'">
                                <td>{{detail.id}}</td>
                                <td>{{detail.idVacina}}</td>
                                <td>{{detail.descricao}}</td>
                                <td>{{detail.dataAplicacao| tccDate}}</td>
<!--                                <td>
                                    <a style="cursor: pointer" ng-click="modal(animal)">Editar</a> | 
                                    <a style="cursor: pointer" ng-click="excluir(animal.id)">Excluir</a>
                                </td>-->
                            </tr>
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col s12 m6 visualizacao-animal">
            <label>Visualização</label>
            <a class="cyan waves-effect" ng-click="filterListAnimal.statusVenda = null" ng-class="{'active': filterListAnimal.statusVenda == null}">Todos</a>
            <a class="green waves-effect" ng-click="filterListAnimal.statusVenda = 0" ng-class="{'active': filterListAnimal.statusVenda == 0}"><i class="mdi mdi-arrow-down-bold white-text"></i>Abertos</a>
            <a class="red waves-effect" ng-click="filterListAnimal.statusVenda = 1" ng-class="{'active': filterListAnimal.statusVenda == 1}"><i class="mdi mdi-arrow-up-bold white-text"></i>Vendidos</a>
        </div>
    </div>

    <table class="striped centered responsive-table">
        <thead>
            <tr>
                <th>Código</th>
                <th>Data de Cadastro</th>
                <th>Custo</th>
                <th>Status da Venda</th>
                <th>Origem</th>
                <th ng-show="filterListAnimal.statusVenda != 1"><a class="waves-effect waves-light btn" ng-click="openSellModal()">Vender?</a></th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="animal in animais| filter: filterListAnimal | orderBy: '-id'">
                <td>{{animal.id}}</td>
                <td>{{animal.dataCadastro| tccDate}}</td>
                <td>{{animal.custo| currency : 'R$ '}}</td>
                <td>{{getStatusVenda(animal.statusVenda)}}</td>
                <td>{{animal.origem}}</td>
                <td ng-show="filterListAnimal.statusVenda != 1" style="z-index: 222">
                    <input ng-if="animal.statusVenda == 0" ng-model="list[animal.id]" ng-true-value="1" ng-false-value="0" type="checkbox" id="{{animal.id}}" />
                    <label for="{{animal.id}}"></label>
                </td>
                <td>
                    <a style="cursor: pointer" ng-click="openDetailsModal(animal.id)">Ver</a> |
                    <a style="cursor: pointer" ng-click="modal(animal)">Editar</a> |
                    <a style="cursor: pointer" ng-click="deletar(animal.id)">Excluir</a>
                </td>
            </tr>
        </tbody>
    </table>
</main>
