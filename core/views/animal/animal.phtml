            <div class="row" ng-show="aba == 1">
                <div class="col s12">
                    <form method="POST" action="#">
                        <div class="row" ng-show="!edit.id">
                            <div class="col s6">
                                <p>
                                    <input ng-model="chekboxInsert" type="checkbox" id="teste" />
                                    <label for="teste">Cadastrar Vários?</label>
                                </p>
                            </div>
                        </div>
                        <div ng-show="!chekboxInsert">
                            <div class="col s12 m6">
                                <label class="active" for="apelido">Apelido</label>
                                <input class="validate" id="apelido" type="text" name="apelido" ng-model="edit.apelido" required/>
                            </div>
                            <div class="col s12 m6">
                                <label class="active" for="dataNascimento">Data de Nascimento</label>
                                <input class="validate" type="date" name="dataNascimento" ng-model="edit.dataNascimento" ng-model-options="{timezone: 'UTC'}" required/>
                            </div>
                            <div class="col s12 m6">
                                <label class="active" for="custo">Custo</label>
                                <input class="validate" type="number" name="custo" ng-model="edit.custo" required/>
                            </div>
